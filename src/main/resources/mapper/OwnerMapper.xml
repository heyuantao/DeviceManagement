<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.heyuantao.devicemanagement.mapper.OwnerMapper">

    <select id="selectByParams" parameterType="java.util.Map" resultType="cn.heyuantao.devicemanagement.domain.Owner">
        select * from owner
        <where>
            <!--
            <foreach item="item" collection="params.entrySet()" open=""  separator=" and "  close="">
                #{item.key}=#{item.value}
            </foreach>
            -->
            <!--
            <foreach collection="select"  item="item" open=""  separator=" and "  close="">
                #{item.key}=#{item.value}
            </foreach>
            -->
            <foreach collection="select" index="key" item="value" open=""  separator=" and "  close="" >
                ${key}=#{value}
            </foreach>

        </where>
    </select>


</mapper>