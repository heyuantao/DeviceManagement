<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.heyuantao.devicemanagement.mapper.OwnerMapper">

    <select id="selectByParams" parameterType="java.util.HashMap" resultType="Owner">
        select * from owner
        <where>
            <foreach item="item" collection="params.entrySet()" open=""  separator=" and "  close="">
                #{item.key}=#{item.value}
            </foreach>
        </where>
    </select>


</mapper>